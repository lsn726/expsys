<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.logsys.material">

	<class name="MaterialContent" table="material">
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		<property name="pn" type="string" column="pn" />
		<property name="plant" type="string" column="plant" />
		<property name="description" type="string" column="description" />
		<property name="type" type="string" column="type" />
		<property name="uom" type="string" column="uom" />
		<property name="price" type="double" column="price" />
		<property name="currency" type="string" column="currency" />
		<property name="qtyprice" type="int" column="qtyprice" />
		<property name="provider" type="string" column="provider" />
		<property name="makebuy" type="string" column="makebuy" />
		<property name="buyer" type="string" column="buyer" />
		<property name="inuse" type="boolean" column="inuse" />
	</class>

</hibernate-mapping>