<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.logsys.production">

	<class name="ProductionContent" table="production">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="date" type="date" column="date" />
		<property name="outputprd" type="string" column="outputprd" />
		<property name="countablewkmin" type="int" column="countablewkmin" />
		<property name="workcenter" type="string" column="workcenter" />
		<property name="operatorqty" type="int" column="operatorqty" />
		<property name="outputqty" type="double" column="outputqty" />
		<property name="tfbegin" type="timestamp" column="tfbegin" />
		<property name="tfend" type="timestamp" column="tfend" />
	</class>
	
</hibernate-mapping>