<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.logsys.production">

	<class name="ProductionContent" table="production">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="date" type="date" column="date" />
		<property name="output" type="string" column="output" />
		<property name="workcenter" type="string" column="workcenter" />
		<property name="operqty" type="int" column="operqty" />
		<property name="qty" type="double" column="qty" />
		<property name="tfbegin" type="timestamp" column="tfbegin" />
		<property name="tfend" type="timestamp" column="tfend" />
		<property name="effmin" type="int" column="effmin" />
	</class>
	
</hibernate-mapping>