<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.logsys.bom">

	<class name="BOMContent" table="bom">
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		<property name="asmpn" type="string" column="asmpn" />
		<property name="plant" type="string" column="plant" />
		<property name="subpn" type="string" column="subpn" />
		<property name="qty" type="double" column="qty" />
		<property name="uom" type="string" column="uom" />
		<property name="version" type="calendar_date" column="version" />
	</class>

</hibernate-mapping>