<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.logsys.bom">

	<class name="BOMContent" table="bom">
		<id name="id" column="id">
			<generator class="increment"/>
		</id>
		<property name="lvl" type="int" column="lvl" />
		<property name="pn" type="string" column="pn" />
		<property name="qty" type="double" column="qty" />
		<property name="unit" type="string" column="unit" />
	</class>

</hibernate-mapping>